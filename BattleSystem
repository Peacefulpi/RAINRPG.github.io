Melee = 'Knife'
Power = 'None'
DidItHit = 'No'
Confused = 0
Accuracy = 2
AccuracyStore = 0
Bandages = 2
EnemyHP = 1

def Battle():
  Loop = True
  while Loop == True:
    global Gun, Melee, Power, Heal, Accuracy, Ammo, EnemyHP, HP, Bandages, DidItHit, EnemyConfused, AccuracyStore, Confused
    print('''                                           ''')
    print('''       ==========YOUR TURN==========       ''')
    print('''               Make your move!             ''')
    print('''                   Gun                     ''')
    print('''                   Melee                   ''')
    print('''                   Heal                    ''')
    print('''                   Power                   ''')
    print('''       =============================       ''')
    print('''                                           ''')
    Select = input()
    if Select.lower() == "gun":
      if Gun == "Pistol":
        if Ammo > 0:
          PrintDescription = Enemy[EnemyType]['AimPistol']
          print("")
          print(PrintDescription)
          print("")
          time.sleep(1)
          if Accuracy == 000:
            DidItHit = random.choice(AccuracyConfusion)
            Confused = Confused - 1
            if Confused == 0:
              Accuracy = AccuracyStore #Use this var to store the players current accuracy at the time of confusion
            elif Confused > 0:
              Loop = False
              PistolAccuracy()
            elif Confused:
              Loop = False
            PistolAccuracy()
          if Accuracy == 00:
            DidItHit = random.choice(Accuracy00)
            Loop = False
            PistolAccuracy()
          if Accuracy == 0:
            DidItHit = random.choice(Accuracy0)
            Loop = False
            PistolAccuracy()
          if Accuracy == 1:
            DidItHit = random.choice(Accuracy1)
            Loop = False
            PistolAccuracy()
          if Accuracy == 2:
            DidItHit = random.choice(Accuracy2)
            Loop = False
            PistolAccuracy()
        if Gun == "Shotgun":
          if Ammo > 0:
            PrintDescription = Enemy[EnemyType]['AimShotgun']
            print(PrintDescription)
            print("")
            time.sleep(1)
            if Accuracy == 000:
              DidItHit = random.choice(AccuracyConfusion)
              Confused = Confused - 1
              if Confused == 0:
                Accuracy = AccuracyStore
                Loop = False
                ShotgunAccracy()
              elif Confused > 0:
                Loop = False
                ShotgunAccuracy()
            if Accuracy == 00:
              DidItHit = random.choice(Accuracy00)
              Loop = False
              ShotgunAccuracy()
            if Accuracy == 0:
              DidItHit = random.choice(Accuracy0)
              Loop = False
              ShotgunAccuracy()
            if Accuracy == 1:
              DidItHit = random.choice(Accuracy1)
              Loop = False
              ShotgunAccuracy()
            if Accuracy == 2:
              DidItHit = random.choice(Accuracy1)
              Loop = False
              ShotgunAccuracy()
        if Gun == "Rifle":
          if Ammo > 0:
            PrintDescription = Enemy[EnemyType]['AimRifle']
            print(PrintDescription)
            print("")
            time.sleep(1)
            if Accuracy == 000:
              DidItHit = random.choice(AccuracyConfusion)
              Confused = Confused - 1
              if Confused == 0:
                Accuracy = AccuracyStore
                Loop = False
                RifleAccracy()
              elif Confused > 0:
                Loop = False
                RifleAccuracy()
            if Accuracy == 00:
              DidItHit = random.choice(Accuracy00)
              Loop = False
              RifleAccuracy()
            if Accuracy == 0:
              DidItHit = random.choice(Accuracy0)
              Loop = False
              RifleAccuracy()
            if Accuracy == 1:
              DidItHit = random.choice(Accuracy1)
              Loop = False
              RifleAccuracy()
            if Accuracy == 2:
              DidItHit = random.choice(Accuracy2)
              Loop = False
              RifleAccuracy()
    if Select.lower() == "melee":
      if Melee == "Knife":
        if Ammo > 0:
          PrintDescription = Enemy[EnemyType]['UseKnife']
          print("")
          print(PrintDescription)
          print("")
          time.sleep(1)
          if Accuracy == 000:
            DidItHit = random.choice(AccuracyConfusion)
