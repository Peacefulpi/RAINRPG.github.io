            FireAxeAccuracy()
          if Accuracy == 2:
            DidItHit = random.choice(Accuracy2)
            Loop = False
            FireAxeAccuracy()
    elif Select.lower() == "heal":
      if Bandages > 0:
        if Confused == 0:
          print("")
          print("       You take out a bandage and start wrapping it around your wound.")
          print("")
          HP = HP + 4
          Bandages = Bandages - 1
          print("       +4HP       ")
          print("")
          Loop = False
          EnemyTurn()
        elif Confused > 0:
          print("       You attempt to use the bandage but you drop it to the ground.")
          print("")
          EnemyTurn()
      elif Bandages == 0:
        print("")
        print("       You do not have any bandages.")
    elif Select.lower() == "power":
      if Power == 'None':
        print("")
        print("       You don't have any Powers.")
      elif Power == 'Confusion':
        if Confused == 0:
          print("")
          print("       You point your hands at the Cultist and open your palms; a purple aura surrounds you as a translucent dark pink mist...")
          print("       ...forms around your hands and travel to surround The Cultist. The Cultist seems dazed and confused.")
          EnemyConfused = 3
          Loop = False
          EnemyTurn()
        elif Confused > 0:
          print("       You attempt to use the power of confusion but you can't focus on what you are doing.")
          print("")
          EnemyTurn()
      elif Power == 'FireBall':
        if Confused == 0:
          print("")
          print("              A fire ball forms in you hand; the fireball feels weird you feel like you hand should be burning but all you feel is a gentle warmth.")
          PrintDescription = Enemy[EnemyType]['FireBallHit']
          print(PrintDescription)
          EnemyHP = EnemyHP - 27
          print("")
          print("       -27HP")
          print("")
          Loop = False
          EnemyTurn()
        elif Confused > 0:
          print("       You attempt to create a fire ball but you can't focus on what you are doing.")
          print("")
          EnemyTurn()
    else:
      print("")
      print("       Sorry I don't recognise that command.       ")

def KnifeAccuracy():
  global EnemyHP, DidItHit
  if DidItHit == "Miss":
    PrintDescription = Enemy[EnemyType]['KnifeMiss']
    print(PrintDescription)
    time.sleep(2)
    EnemyTurn()
  if DidItHit == "Hit":
    PrintDescription = Enemy[EnemyType]['KnifeHit']
    print(PrintDescription)
    print("")
    DMG = random.choice(KnifeDamage)
    EnemyHP = EnemyHP - DMG
    time.sleep(0.5)
    print('''       -''',DMG,'''HP       ''')
    print("")
    time.sleep(2)
    if EnemyHP < 0:
      select = "No"
      BattleWon()
    elif EnemyHP == 0:
      select = "No"
      BattleWon()
    elif EnemyHP > 0:
      select = "No"
      EnemyTurn()
  if DidItHit == "CriticalHit":
    print('''                                        ''')
    print('''    =============================       ''')
    print('''            CRITICAL HIT!               ''')
    print('''    =============================       ''')
    print('''                                        ''')
    time.sleep(1)
    PrintDescription = Enemy[EnemyType]['KnifeCriticalHit']
    print(PrintDescription)
    print("")
    Ammo = Ammo - 1
    EnemyHP = EnemyHP - 12
    time.sleep(0.5)
    print('''                   ''')
    print('''       -12HP       ''')
    print('''                   ''')
    time.sleep(2)
    if EnemyHP < 0:
      select = "No"
      BattleWon()
    elif EnemyHP == 0:
      select = "No"
      BattleWon()
    elif EnemyHP > 0:
      select = "No"
      PrintDescription = Enemy[EnemyType]['CriticalHitSurvive']
      print(PrintDescription)
      print("")
      time.sleep(1)
      EnemyTurn()

